apiVersion: v1
kind: Pod
metadata:
  name: rabbitmq
  labels:
    app: rabbitmq
spec:
  containers:
  - name: rabbitmq
    image: local/rabbitmq
    env:
      - name: HOSTNAME
        value: rabbitmq-svc
    ports:
      - containerPort: 4369
      - containerPort: 5671
      - containerPort: 5672
      - containerPort: 15672
      - containerPort: 25672
